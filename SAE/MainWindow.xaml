<Window
    x:Class="SAE.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1279"
    Height="720"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/img/sky.jpg" />
        </Grid.Background>
        <Image
            x:Name="imgLune"
            Margin="-228,147,639,-278"
            OpacityMask="Black"
            Source="/img/lune.png"
            Stretch="Fill" />
        <Label
            x:Name="titre"
            Width="994"
            Height="142"
            Margin="0,76,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="#00000000"
            Content="LE COSMONAUTE"
            FontFamily="72 Black"
            FontSize="110"
            Foreground="White" />
        <Button
            x:Name="butJouer"
            Width="258"
            Height="104"
            Margin="124,295,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="butJouer_Click"
            Content="Jouer"
            FontSize="36" />
        <Button
            x:Name="butParametre"
            Width="258"
            Height="104"
            Margin="124,428,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="butParametre_Click"
            Content="Paramètres"
            FontSize="36" />
        <Button
            x:Name="butQuitter"
            Width="258"
            Height="104"
            Margin="124,561,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="butQuitter_Click"
            Content="Quitter"
            FontSize="36" />
        <Image
            x:Name="imgAstro"
            Margin="430,147,-123,-417"
            Source="/img/astronaute_fusee_dorsale_T_pose.png"
            Stretch="Fill" />
    </Grid>
</Window>
