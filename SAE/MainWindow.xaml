<Window
    x:Class="SAE.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1280"
    Height="720"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush />
        </Grid.Background>
        <Label
            x:Name="titre"
            Width="994"
            Height="190"
            Margin="0,46,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="LE COSMONAUTE"
            FontSize="125" />
        <Button
            x:Name="butJouer"
            Width="258"
            Height="104"
            Margin="124,295,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="butJouer_Click"
            Content="Jouer"
            FontSize="36" />
        <Button
            x:Name="butParametre"
            Width="258"
            Height="104"
            Margin="124,432,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="butParametre_Click"
            Content="Paramètres"
            FontSize="36" />
        <Button
            x:Name="butQuitter"
            Width="258"
            Height="104"
            Margin="124,561,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="butQuitter_Click"
            Content="Quitter"
            FontSize="36" />
    </Grid>
</Window>
