<Window
    x:Class="SAE.SelecteurNiveau"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SelecteurNiveau"
    Width="1280"
    Height="720"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Button
            x:Name="BoutonNiv1"
            Width="80"
            Height="80"
            Margin="316,307,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Bouton1_Click"
            Content="Niveau 1" />
        <Button
            x:Name="BoutonNiv2"
            Width="80"
            Height="80"
            Margin="0,112,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="Bouton2_Click"
            Content="Niveau 2" />
        <Button
            x:Name="BoutonNiv3"
            Width="80"
            Height="80"
            Margin="860,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="Bouton3_Click"
            Content="Niveau 3"
            RenderTransformOrigin="1.025,0.119" />
        <Button
            x:Name="BoutonAnnule"
            Width="80"
            Height="40"
            Margin="0,558,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="BoutonAnnuler_Click"
            Content="Annuler" />
    </Grid>
</Window>
